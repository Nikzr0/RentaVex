<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@Model.Product.ImageUrl" alt="..." /></div>
            <div class="col-md-6">
                <h1 class="display-5 fw-bolder">@Model.Product.Name</h1>
                <div class="fs-5 mb-5">
                    <span>@Model.Product.Price</span>
                </div>
                <p class="lead">@Model.Product.Description</p>
                <div class="d-flex">
                    <a asp-action="RentProduct" asp-controller="Products" asp-route-id="@Model.Product.Id" class="btn btn-primary">
                        Rent me
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>


